# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database Configuration (Railway will provide these)
DB_HOST=${{PGHOST}}
DB_PORT=${{PGPORT}}
DB_NAME=${{PGDATABASE}}
DB_USER=${{PGUSER}}
DB_PASSWORD=${{PGPASSWORD}}
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=https://antaali-erp.windsurf.build

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
